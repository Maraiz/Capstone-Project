    <script>
        // Logic for camera and hardware data access
        async function openCamera() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ video: true });
                const video = document.createElement('video');
                video.srcObject = stream;
                video.autoplay = true;
                // Display video in modal
                const modal = document.getElementById('cameraModal');
                modal.style.display = 'block';
                const videoContainer = modal.querySelector('.modal-content');
                videoContainer.appendChild(video);
            } catch (err) {
                console.error("Error accessing camera: ", err);
                alert("Unable to access camera. Please check permissions.");
            }
        }

        function openAlbum() {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = (e) => {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = (event) => {
                        console.log("Image loaded: ", event.target.result);
                        alert("Image selected from album!");
                    };
                    reader.readAsDataURL(file);
                }
            };
            input.click();
        }

        function describeFood() {
            const description = prompt("Describe the food:");
            if (description) {
                console.log("Food description: ", description);
                alert("Food description saved!");
            }
        }

        function addFavorite() {
            alert("Added to favorites!");
        }

        function updatePortions(change) {
            const portionInput = document.getElementById('portionInput');
            let currentValue = parseInt(portionInput.value) || 1;
            currentValue = Math.max(1, currentValue + change);
            portionInput.value = currentValue;
        }

        function submitFood() {
            const calories = document.getElementById('caloriesInput').value;
            const protein = document.getElementById('proteinInput').value;
            const fat = document.getElementById('fatInput').value;
            const carbs = document.getElementById('carbsInput').value;
            const portions = document.getElementById('portionInput').value;
            const heartScore = document.getElementById('heartScoreInput').value;

            console.log("Food Data:", { calories, protein, fat, carbs, portions, heartScore });
            alert("Food data submitted!");
            document.getElementById('foodModal').style.display = 'none';
        }

        function closeModal(modalId) {
            const modal = document.getElementById(modalId);
            modal.style.display = 'none';
            // Remove video element if present
            const video = modal.querySelector('video');
            if (video) video.remove();
        }
    </script>
